<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HouseApp.ViewModels"
             x:Class="HouseApp.Views.ChatPage"
             x:DataType="viewmodels:ChatViewModel"
             BackgroundColor="#F5F6FA">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Connection Status Header -->
        <StackLayout Grid.Row="0" 
                     BackgroundColor="#E9D5FF"
                     Padding="12">
            <HorizontalStackLayout Spacing="8">
                <Ellipse WidthRequest="10" HeightRequest="10" Fill="Green" VerticalOptions="Center"/>
                <Label Text="Connected" TextColor="#111827" FontSize="14" VerticalOptions="Center"/>
                <Label Text="{Binding HouseName}" TextColor="#6D28D9" FontSize="14" FontAttributes="Bold" HorizontalOptions="EndAndExpand" VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </StackLayout>

        <!-- Messages Area -->
        <ScrollView x:Name="MessagesScrollView" Grid.Row="1" Padding="20" BackgroundColor="#F5F6FA">
            <VerticalStackLayout Spacing="16">
                
                <CollectionView ItemsSource="{Binding Messages}" SelectionMode="None" BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ChatMessageViewModel">
                            
                            <!-- Use StackLayout with explicit Background instead of Frame -->
                            <StackLayout BackgroundColor="#6D28D9"
                                         Padding="16"
                                         Margin="50,8,8,8"
                                         HorizontalOptions="End">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer/>
                                </StackLayout.GestureRecognizers>
                                
                                <VerticalStackLayout Spacing="6">
                                    
                                    <!-- Sender Name - Explicit White -->
                                    <Label Text="{Binding SenderName}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           LineBreakMode="NoWrap"/>
                                    
                                    <!-- Message Text - Explicit White -->
                                    <Label Text="{Binding MessageText}"
                                           FontSize="15"
                                           TextColor="White"
                                           LineBreakMode="WordWrap"
                                           MaximumWidthRequest="300"/>
                                    
                                    <!-- Timestamp - Light Purple -->
                                    <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                           FontSize="11"
                                           TextColor="#E9D5FF"
                                           HorizontalOptions="End"/>
                                    
                                </VerticalStackLayout>
                            </StackLayout>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </VerticalStackLayout>
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="2" 
              BackgroundColor="White"
              Padding="16"
              ColumnDefinitions="*,Auto" 
              ColumnSpacing="12">
            
            <!-- Input Field -->
            <StackLayout Grid.Column="0" 
                         BackgroundColor="#F0F0F0"
                         Padding="12">
                <Entry Text="{Binding NewMessage}"
                       Placeholder="Type a message..."
                       PlaceholderColor="#999999"
                       TextColor="#000000"
                       BackgroundColor="Transparent"
                       FontSize="15"
                       VerticalOptions="Center"/>
            </StackLayout>

            <!-- Send Button -->
            <Button Grid.Column="1"
                    Text="âž¤"
                    Command="{Binding SendMessageCommand}"
                    BackgroundColor="#6D28D9"
                    TextColor="White"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    FontSize="22"
                    FontAttributes="Bold"/>
        </Grid>

    </Grid>
</ContentPage>